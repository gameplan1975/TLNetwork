<h1>Let's Play</h1>
<h4>Q.1 </h4>
<% select = 0 %>
<table>
  <% @questions.each do |question| %>
    <tr>
      <% select += 1 %>
      <th><%= select %>:
      <%= question.name %></th>
      <th><%= link_to 'Play!', games_result_path(:select_question => question) , class: 'btn btn-success'  %></th>
    </tr>
  <% end %>
</table>
<span class="text-success">genre:<%= @genre.name %></span>