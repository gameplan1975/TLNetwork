      <th><button type="button" class="btn btn-primary" data-toggle="modal" data-target="#modal3">うんちく</button></th>
    </tr>
</table>

<%= link_to 'Next Quiz!', games_play_path(:select_genre => @questiona.genre_id), class: 'btn btn-success' %>
<%= link_to 'Change Genre!', games_prepare_path, class: 'btn btn-success' %>
<%= link_to 'Back', root_path, class: 'btn btn-primary' %>

<div class="modal fade" id="modal0" tabindex="-1"
      role="dialog" aria-labelledby="label1" aria-hidden="true">
