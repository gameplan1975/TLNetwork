<h1>Games#result</h1>
<p>あなたが選んだ答え: <%= @questiona.name%></p>

<!-- 答えあわせ　-->
<div class="card">
  <% if @questiona.year <= @question0.year %>
    <% if @questiona.year <= @question1.year %>
      <% if @questiona.year <= @question2.year %>
        <% if @questiona.year <= @question3.year %>
          <h4 style="color:green">correct!</h4>
        <% else %>
          <h5 style="color:red">not coreect..</h5>
        <% end %>
      <% else %>
        <h5 style="color:red">not coreect..</h5>
      <% end %>
    <% else %>
      <h5 style="color:red">not coreect..</h5>
    <% end %>
  <% else %>
    <h5 style="color:red" >not coreect..</h5>
  <% end %>
</div>
<br>

<table class ="table" >
    <tr>
      <th><%= @question0.name %></th>
      <th><p><%= @question0.year %>年　<%= @question0.month %>月</p></th>
      <th><button type="button" class="btn btn-primary" data-toggle="modal" data-target="#modal0">うんちく</button></th>
    </tr>
