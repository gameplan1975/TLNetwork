<div class="card">
  <%= form_with(model: @message, local: true) do |form| %>
    <div class="field">
      <%= form.label :title %>
      <%= form.text_field :title %>
    </div>
    <div class="field">
      <%= form.label :content %>
      <%= form.text_area :content %>
    </div>
    <hr>
    <div class="actions">
      <%= form.submit %>
    </div>
  <% end %>
</div>
<br>