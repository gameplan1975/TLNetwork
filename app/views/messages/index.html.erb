<h1>Message Board</h1>
  <% @messages.each do |message| %>
    <div class="card mt-3" >
      <h5 class= "card-title"><%= message.title %></h5>
      <p class="card-text">本文：<%= message.content %></p>
      <hr>
      <p>作成者：　<%= message.user.name %></p>
      <td><%= link_to 'Show', message %></td>
    </div>
  <% end %>
<br>
  <%= link_to "new message" , new_message_path, class: "btn btn-primary" %>
  <%= link_to 'Main Page', homes_top_path, class: 'btn btn-primary'  %>
  <%= link_to 'Players Index', players_path, class: 'btn btn-primary' %>
  <%= link_to 'Questions Index', questions_path, class: 'btn btn-primary' %>
  <%= link_to 'Genres Index', genres_path, class: 'btn btn-primary' %>
  <%= link_to 'Try Quiz!', games_prepare_path, class: 'btn btn-success' %>
</table>