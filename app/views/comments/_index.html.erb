<ul>
  <% comments.each do |comment| %>
    <% if comment.id.present? %>
      <li>
        <div class="comment-content" id ="this_comment_<%= comment.id %>"></div>
        <p><%= comment.content %></p>
        <%= link_to "edit", edit_message_comment_path(message, comment), remote: true , class: "btn btn-outline-primary" %>
        <%= link_to "delete", message_comment_path(comment.message_id, comment.id), method: :delete, remote: true, data: { confirm: "ok?"}, 
        class: "btn btn-outline-danger" %>
      </li>
    <% end %>
  <% end %>
</ul>