<h1>Players index</h1>
  <table class="table">
    <thead class="thead-dark">
      <tr>
        <th>Name</th>
        <th>Played Games</th>
        <th>Total Corrects</th>
        <th colspan="3"></th>
      </tr>
  </thead>
    <tbody>
      <% @players.each do |player| %>
        <tr>
          <th><%= player.user.name %></th>
          <th><%= player.game %></th>
          <th><%= player.correct %></th>
          <th><%= link_to 'show', player_path(player), class: 'btn btn-outline-info btn-sm' %></th>
          <th><%= link_to 'Edit', edit_player_path(player), class: 'btn btn-outline-info btn-sm'  %></th>
          <th><%= link_to 'Destroy', player, method: :delete, class: 'btn btn-outline-danger btn-sm'  %></th>
        </tr>
      <% end %>
    </tbody>
  </table>
  <%= paginate @players %>
<br>
<%= link_to 'Main Page', homes_top_path, class: 'btn btn-primary'  %>
<%= link_to 'Questions Index', questions_path, class: 'btn btn-primary' %>
<%= link_to 'Genres Index', genres_path, class: 'btn btn-primary' %>
<%= link_to 'Massage Board', messages_path, class: 'btn btn-primary' %>
<%= link_to 'Try Quiz!', games_prepare_path, class: 'btn btn-success' %>