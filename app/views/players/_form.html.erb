<%= form_with model: @player do |f| %>
  <%= f.label :favorite_category %><br>
  <%= f.text_area :favorite_category %><br><br>
  <%= f.label :comment %><br>
  <%= f.text_area :comment %><br><br>
    <%= f.radio_button :admin, true %>
    <%= f.label :admin, "Administrator" %>
    <%= f.radio_button :admin, false %>
    <%= f.label :admin, "Normal User" , checked: true %><br><br>
  <%= f.submit %>
<% end %>